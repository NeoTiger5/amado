<div class="container height-100 d-flex justify-content-center align-items-center">
    <div class="position-relative">
        <div class="card p-2 text-center">
            <form action="/otp" method="POST">
            <h6>Please enter the one time password <br> to verify your account</h6>
            <div> <span>A code has been sent to your mobile number</span>  </div>
            {{#if otpErr}}
            <p class="text-danger">{{otpErr}}</p>
            {{/if}}
            <div id="otp"  class="inputs d-flex flex-row justify-content-center mt-2" na>  
                
                <input class="m-2 text-center form-control rounded" type="text" id="first" maxlength="6" name="otp"/>     
                    </div>
            <div class="mt-4" > <button class="btn btn-danger px-4 validate" type="submit">Validate</button> </div>
        </div>
        </form>
        <div class="card-2">
            <div class="content d-flex justify-content-center align-items-center"> <span>Didn't get the code</span> <a
                    href="#" class="text-decoration-none ms-3">Resend(1/3)</a> </div>
        </div>
    </div>
</div>