                    </div>

                    <button onclick="addToCart('{{this.product._id}}')" name="addtocart"
                        class="btn amado-btn">Add to cart</button>

                         

                    <button  onclick="addToWishlist('{{this.product._id}}')"
                                        name="addtowishlist" style="height: 3.5rem;" class="btn btn-danger ">Add to Wishlist
                        ♥</button>

                </div>
            </div>
