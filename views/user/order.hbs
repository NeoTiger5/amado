
<section >
    <div class="container">
        <div class="row mt-4">
            <a href=""></a>
        </div>
        <table class="table table-hover mt-5">
            <h2>Orders</h2>
            <thead>
                <tr>
                    <th scope="col">No.</th>
                    <th scope="col">Date & Time</th>
                    <th scope="col">Item</th>
                   
                    <th scope="col">Quantity</th> 
                    <th scope="col">Total</th>
                    <th scope="col">Discount</th>
                    <th scope="col">Total Amount</th>
                    <th scope="col">Payment</th>
                    <th scope="col">Status</th>
                    <th scope="col">Details</th>
                </tr>
            </thead>
            <tbody>
                {{#each orders}}
                <tr>
                    <td>{{inc @index}}</td>
                    <td>{{this.date}}</td>
                    <td>{{this.product.name}}</td>
                    <td>{{this.quantity}}</td>                 
                    <td>₹ {{this.TotalAmount}}</td>
                    <td>₹ {{this.discount}}</td>
                    <td>₹ {{this.discountTotal}}</td>
                    <td>{{this.paymentMethod}}</td>
                    <td>{{this.status}}</td>
                    <td><a href="/view-order-products-details/?id={{_id}}&proId={{this.item}}">Click ME</a></td>              
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>
</div>