<section>
  <div class="container">
    
    <table class="table">
       <h2> All Users</h2>
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Mobile</th>
          <th scope="col">Mobile</th>
        </tr>
      </thead>
      {{#each users}}
      <tbody>
        <tr>

          <th scope="row">{{@index}}</th>
          <td>{{this.name}}</td>
          <td>{{this.email}}</td>
          <td>{{this.mobile}}</td>
        
          <td>

            <a href="/admin/view-users-order?id={{this._id}}" class="btn btn-success">Orders</a>
            <a href="" class="btn btn-primary">Block</a>
             


          </td>

        </tr>

      </tbody>
      {{/each}}
    </table>
  </div>

</section>