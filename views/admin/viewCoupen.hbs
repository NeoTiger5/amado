<div class="container-fluid pt-4 px-4">
    <div class="row g-4">

        <div class="col-12">
            <div class="card-header">

                <a href="/admin/generateCoupen" <button type="submit" class="btn btn-success ml-3" style="border-color: rgb(240, 245, 245);">Generate Coupons</button></a></div>

            </div>
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">All Products</h6>
                <div class="table-responsive">
                    <table class="table" id="usersTable">
                        <thead>
                            <tr>
                                <th scope="col">No</th>
                                <th scope="col">Coupon</th>
                                <th scope="col">Offer in Percentage</th>
                                 <th scope="col">Validity</th>
                                <th scope="col">action</th>
                             
                              
                            </tr>
                        </thead>
                        <tbody>
                            {{#each coupons}}
                                <tr>
                                    <td scope="row">{{inc @index }}</td>
                                    <td>{{ this.name }}</td>

                                    <td>{{ this.offer }}</td>
                                    <td>{{ this.validity }}</td> 
                                    <td>
                                        <a href="/admin/deleteCoupon?id={{this._id}}" onclick="return confirm('Do you want to Delete {{ this.name }} ?')" class="btn btn-primary"  >Delete</a>
                                    </td>
                                   
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {


        $('#usersTable').wrap('<div id="hide" style="display:none"/>');

        $('#hide').css('display', 'block');
    });


    var table = $('#usersTable').DataTable();
</script>